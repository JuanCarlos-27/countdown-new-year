<script>
  import { Fireworks } from 'fireworks-js';

  const container = document.querySelector('.container');
  const fireworks = new Fireworks(container, {
    sound: {
      enabled: true,
      volume: {
        min: 4,
        max: 8,
      },
    },
  });

  fireworks.start();
</script>

<div class="container"></div>

<style>
  .container {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
  }
</style>
